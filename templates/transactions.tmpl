<section class="px-4 py-4 mx-auto w-full h-full flex flex-col">
    <div class="flex items-center gap-x-3">
        <h2 class="text-lg font-medium text-gray-800 dark:text-white">{{ .Title }}</h2>

        <span class="px-3 py-1 text-xs text-blue-600 bg-blue-100 rounded-full dark:bg-gray-800 dark:text-blue-400">{{ .Subtitle }}</span>
    </div>

    <div class="mt-4 flex-grow">
		<div class="bg-white flex flex-col h-full dark:bg-gray-800 relative shadow-md sm:rounded-lg overflow-hidden">
			{{ template "table_header" . }}

			{{ template "table" . }}
	
			{{ template "pagination" . }}
			
		</div>
    </div>
</section>
